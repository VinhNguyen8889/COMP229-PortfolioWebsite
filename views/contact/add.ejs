<!-- Header -->
<%- include('../partials/header') %>
<!-- Main Navbar -->
<%- include('../partials/main_nav') %>

<!-- Content  for the add page -->
<div class="container">
  <div class="row">
    <div class="offset-md-3 col-md-6">
      <h1><%=title %></h1>

      <form class="form" method="post">
        <div class="from-group">
          <label for="nameTextField">Contact Name:</label>
          <input
            type="text"
            class="form-control"
            id="nameTextField"
            placeholder="Enter the Contact Title:"
            name="name"
            required
          />
        </div>

        <div class="from-group">
          <label for="authorTextField">Email Address:</label>
          <input
            type="text"
            class="form-control"
            id="authorTextField"
            placeholder="Enter the Contact's Author:"
            name="email"
            required
          />
        </div>

        <div class="from-group">
          <label for="priceTextField">Contact Number:</label>
          <input
            type="number"
            class="form-control"
            id="pricecTextField"
            placeholder="Enter the Price of Contact:"
            name="number"
            required
          />
        </div>

        <button class="btn btn-primary" type="submit">
          <i class="fas fa-edit"></i>Submit
        </button>

        <a href="/contact-list" class="btn btn-warning">
          <i class="fas fa-undo"></i>Cancel
        </a>
      </form>
    </div>
  </div>
</div>

<!-- Bottom Navbar -->
<%- include('../partials/bottom_nav') %>

<!-- Footer -->
<%- include('../partials/footer') %>
